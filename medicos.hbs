<table border="solid">
            <h2>LISTADO DE MEDICOS</h2>
            <thead>
                <tr>
                    <th>Cedula Medico</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Especialidad</th>
                    <th>consultorio</th>
                    <th>correo</th>
                    <th>opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each medicos}}
        <tr>
            <form action="/medicos/actualizar/{{cedula}}" method="post">
                <td><input id="cedula" name="cedula" value="{{cedula}}" disabled></td>
                <td><input id="nombres" name="nombres" value="{{nombres}}" {{../opcion}}></td>
                <td><input id="apellidos" name="apellidos" value="{{apellidos}}" {{../opcion}}></td>
                <td><input id="especialidad" name="especialidad" value="{{especialidad}}" {{../opcion}}></td>
                <td><input id="consultario" name="consultorio" value="{{consultorio}}" {{../opcion}}></td>
                <td><input id="correo" name="correo" value="{{correo}}" {{../opcion}}></td>
                <td><a class="eliminar" href="medicos/eliminar/{{cedula}}">Eliminar</a></td>
                <td>
                    {{#if ../activo}}
                    <a class="editar" href="/medicos/activar">editar</a>
                    {{else}}
                    <input type="submit" value="Enviar">
                    {{/if}}
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<a href="medicos/agregar">Agregar medicos</a> 
<div class="opciones-tabla">
<a class="volver" href="/">Volver</a>
</div>        
    